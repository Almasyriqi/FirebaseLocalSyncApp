<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wave">


    <TextView
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="155dp"
        android:layout_marginRight="20dp"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="8dp"
        android:text="Logout"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/logout_svgrepo_com"
        android:backgroundTint="@color/white"/>


    <Button
        android:id="@+id/buttonProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Profil"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/baseline_person_24"
        android:backgroundTint="#FFFFFF"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
            android:layout_marginTop="200dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="300dp"
                android:hint="Enter"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#03A9F4"
        android:layout_marginTop="275dp"/>


        <Button
        android:id="@+id/buttonInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="210dp"
        android:onClick="buttonAdd"
        android:text="Submit"
            android:backgroundTint="#068F0C"/>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="169dp"
        android:text="Input Data"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listView_Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="-2dp"
        android:divider="@color/black"
        android:dividerHeight="1dp"/>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonInput"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="58dp"
        android:onClick="resetDatabase"
        android:text="Reset"
        android:backgroundTint="#E91E63"/>

    <Button
        android:id="@+id/buttonSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="180dp"
        android:onClick="buttonSync"
        android:text="Sync"
        android:backgroundTint="#2196F3"/>

    <Button
        android:id="@+id/buttonExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/buttonSync"
        android:layout_marginStart="120dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#068F0C"
        android:onClick="buttonExport"
        android:text="Export" />

</RelativeLayout>

